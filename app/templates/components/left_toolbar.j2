{# Left vertical toolbar to host expandable buttons (keeps future buttons easy to add) #}
<nav id="left-toolbar" aria-label="Left toolbar" role="toolbar" aria-orientation="vertical">
    <div id="left-toolbar-inner">
        <!-- small brand slot (icon-only) -->
        <div id="left-toolbar-logo" title="QueryWeaver" aria-hidden="true"
            style="width:40px; height:40px; display:flex; align-items:center; justify-content:center;">
            <div
                style="width:20px;height:12px;border-radius:3px;background:var(--falkor-accent, rgba(150,120,220,0.22));">
            </div>
        </div>

        <!-- Toolbar buttons container -->
        <div id="toolbar-buttons">
            <!-- Theme toggle moved here from the top toolbar -->
            <button id="theme-toggle-btn" class="action-button toolbar-button" title="Toggle Theme" 
                aria-label="Toggle theme" aria-pressed="false" tabindex="-1">
                <svg class="theme-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle class="sun" cx="12" cy="12" r="5" stroke="currentColor" stroke-width="2"/>
                    <path class="sun" d="M12 1v2m0 18v2M4.22 4.22l1.42 1.42m12.72 12.72l1.42 1.42M1 12h2m18 0h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" stroke="currentColor" stroke-width="2"/>
                    <path class="moon" d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" stroke="currentColor" stroke-width="2" fill="currentColor"/>
                    <defs>
                        <clipPath id="leftHalf">
                            <rect x="0" y="0" width="12" height="24"/>
                        </clipPath>
                        <clipPath id="rightHalf">
                            <rect x="12" y="0" width="12" height="24"/>
                        </clipPath>
                    </defs>
                    <circle class="system" cx="12" cy="12" r="8" fill="currentColor" clip-path="url(#leftHalf)"/>
                    <circle class="system" cx="12" cy="12" r="8" fill="none" stroke="currentColor" stroke-width="2" clip-path="url(#rightHalf)"/>
                    <circle class="system" cx="12" cy="12" r="8" fill="none" stroke="currentColor" stroke-width="2"/>
                </svg>
            </button>
            <button class="action-button toolbar-button" id="menu-button" title="Instructions" aria-label="Instructions"
                aria-pressed="false" tabindex="0">
                <svg width="18" height="18" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M22 19.7333V12.2667C22 11.9556 21.8667 11.7444 21.6 11.6333C21.3333 11.5222 21.0889 11.5778 20.8667 11.8L17.6 15.0667C17.3333 15.3333 17.2 15.6444 17.2 16C17.2 16.3556 17.3333 16.6667 17.6 16.9333L20.8667 20.2C21.0889 20.4222 21.3333 20.4778 21.6 20.3667C21.8667 20.2556 22 20.0444 22 19.7333ZM6.66667 28C5.93333 28 5.30578 27.7391 4.784 27.2173C4.26222 26.6956 4.00089 26.0676 4 25.3333V6.66667C4 5.93333 4.26133 5.30578 4.784 4.784C5.30667 4.26222 5.93422 4.00089 6.66667 4H25.3333C26.0667 4 26.6947 4.26133 27.2173 4.784C27.74 5.30667 28.0009 5.93422 28 6.66667V25.3333C28 26.0667 27.7391 26.6947 27.2173 27.2173C26.6956 27.74 26.0676 28.0009 25.3333 28H6.66667ZM13.3333 25.3333H25.3333V6.66667H13.3333V25.3333Z"
                        fill="currentColor" />
                </svg>
            </button>
            <!-- Schema button (replaces analytics) -->
            <button class="action-button toolbar-button" id="schema-button" title="Schema"
                aria-label="Open schema" aria-pressed="false" tabindex="-1">
                <!-- Simple database/schema icon: cylinder + table nodes -->
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <!-- Cylinder (database) -->
                    <ellipse cx="12" cy="5" rx="6" ry="2.2" stroke="currentColor" stroke-width="1.2" fill="none" />
                    <path d="M6 5v8c0 1.1 2.7 2.2 6 2.2s6-1.1 6-2.2V5" stroke="currentColor" stroke-width="1.2" fill="none"/>
                    <ellipse cx="12" cy="13.2" rx="6" ry="2.2" stroke="currentColor" stroke-width="1.2" fill="none" />
                    <!-- Small table nodes to indicate schema boxes -->
                    <rect x="7" y="15.5" width="3" height="2" rx="0.4" fill="currentColor" />
                    <rect x="11" y="15.5" width="3" height="2" rx="0.4" fill="currentColor" />
                    <rect x="15" y="15.5" width="2" height="2" rx="0.4" fill="currentColor" />
                </svg>
            </button>
        </div>
    </div>
    <div id="left-toolbar-footer"></div>
</nav>