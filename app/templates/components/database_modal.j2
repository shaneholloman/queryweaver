{# Database connection modal #}
<div id="db-modal">
    <div class="db-modal-content">
        <h3 class="db-modal-title" id="db-modal-title">Connect to Database</h3>

        <!-- Database type selector (custom dropdown with icons) -->
        <div class="custom-dropdown" id="database-type-dropdown">
            <div class="dropdown-selected" title="Select Database Type">
                <span class="dropdown-text">-- Select database --</span>
                <span class="dropdown-arrow">â–¼</span>
            </div>
            <div class="dropdown-options" id="database-dropdown-options">
                <div class="dropdown-option" data-value="">
                    <span>-- Select database --</span>
                </div>
                <div class="dropdown-option" data-value="postgresql">
                    <img src="/static/icons/postgresql.svg" alt="PostgreSQL" class="db-icon"/>
                    <span>PostgreSQL</span>
                </div>
                <div class="dropdown-option" data-value="mysql">
                    <img src="/static/icons/mysql.svg" alt="MySQL" class="db-icon"/>
                    <span>MySQL</span>
                </div>
            </div>
            <input type="hidden" id="database-type-select" name="database-type" value="">
        </div>

        <input type="text" id="db-url-input" class="db-modal-input" placeholder="Select database type first..." disabled />
        <div id="db-url-example" style="font-size: 0.9em; color: #666; margin-top:6px; text-align:center"></div>

        <!-- Connection progress steps will appear here -->
        <div id="db-connection-steps">
            <ul id="db-connection-steps-list"></ul>
        </div>

        <div class="db-modal-actions">
            <button id="db-modal-connect" class="db-modal-btn db-modal-connect" disabled>
                <span class="db-modal-connect-text">Connect</span>
                <span class="db-modal-loading-spinner" style="display: none;">
                    <span class="spinner"></span>
                    Loading Schema...
                </span>
            </button>
            <button id="db-modal-cancel" class="db-modal-btn db-modal-cancel">Cancel</button>
        </div>
    </div>
</div>
